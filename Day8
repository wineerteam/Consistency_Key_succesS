// 868   Binary Gap

class Solution {
    public int binaryGap(int n) {
        int ans=0;
       
          int i=-1,j=0;
        while( n != 0) {
        int rem = n%2;
         if(  rem == 1){
            if(i != -1)
            ans=Math.max(ans,j-i);
             i=j;
         }
        j++;
       n /=2;
        }
    
            return ans;
        }
}

// optimize code tc log(n) and sc 0(1)
// use StringBuilder and store methode than sc log(n) and tc is same
